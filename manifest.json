{
  "manifest_version": 3,
  "name": "Inflearn Video Enlarger",
  "version": "1.0.0",
  "description": "Enlarges video player on Inflearn lecture pages",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.inflearn.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Inflearn Video Enlarger Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.inflearn.com/courses/lecture*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
